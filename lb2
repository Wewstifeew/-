def greet(user_name):
    print("Привет,", user_name)  # выводим приветствие с именем пользователя

 #Запрашиваем имя у пользователя
user_name = input("Введите своё имя: ")  # input() считывает текст, введённый пользователем
greet(user_name)  # вызываем функцию и передаём введённое имя

